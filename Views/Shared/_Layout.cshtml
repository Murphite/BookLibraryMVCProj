<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookLibrary</title>
    <link rel="stylesheet" href="/lib/w3.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookLibrary.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <partial name="_NavbarPartial" ; />

    <div style="margin-bottom:60px"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />
    <br />
    <br />


    <footer>

        <div class="w3-container w3-center w3-padding">
            <nav style="display: flex; justify-content: center;">
                <p><a style="text-decoration: none; padding-right: 20px;">About us</a></p>
                <p><a style="text-decoration: none; padding-right: 20px;">Contact Us</a></p>
                <!-- Add font awesome icon -->
                <p class="fa fa-facebook" style="padding-right: 20px;" aria-hidden="true"></p>
                <p class="fa fa-twitter" style="padding-right: 20px;" aria-hidden="true"></p>
                <p class="fa fa-instagram" style="padding-right: 20px;" aria-hidden="true"></p>

            </nav>
        </div>
        <div class="w3-container w3-padding-16 w3-light-grey w3-center">
            <b>&copy; 1996-2021, Amazon.com, Inc. or its affiliates</b>
        </div>
    </footer>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
