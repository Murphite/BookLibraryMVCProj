        <a href="#" class="btn-1">Reggae</a>
        <a href="#" class="btn-1">Rock</a>
    </div>

    @* <div class="box-2">
        <a href="#" class="btn-1">Art</a>
        <a href="#" class="btn-1">Biography</a>
        <a href="#" class="btn-1">Sports</a>
