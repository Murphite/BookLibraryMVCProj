</div>


<div style="margin: 15px 0;">
<div style="padding-left: 15px;">
    <h5><b>New Releases </b><span>Books</span> 20 <span>CDs</span> 25</h5>
</div>


<section class="gallery min-vh-100">
    <div class="container-fluid">
        <div class="row row-cols-3 row-cols-md-4 row-cols-lg-6">
            @foreach (var book in Model.Books)
            {
                <div class="col mb-4">
                    <a asp-action="Details" asp-route-id="@book.Id" class="book-link">
                        <div class="card h-100 d-flex flex-column" style="background: white;">
                            <img src='@book.CoverImageUrl' asp-append-version="true" alt="Book Cover" class="card-img-top" style="height: 250px;">
                            <div class="card-body p-2" style="line-height: 1;">
                                <h6 class="card-title"><b>@book.Title -</b><small class="text-muted">@book.GenreType</small></h6>
                                <h6 class="card-text books-lib">@book.Author</h6>
                                <div class="star-rating" data-rating="3">
                                    <span></span><span></span><span></span><span></span><span></span>
                                </div>
                                <p class="card-text"><small class="text-muted">Available</small></p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

