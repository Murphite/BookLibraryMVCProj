}

<Partial name="_IndexPartial" />


<style>
    body, html {
        width: 100%;
        margin: 0;
    }


    .book-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .book-link {
        text-decoration: none; /* Optional: Remove the underline for the link */
        color: black; /* Optional: Set the color of the link text */
    }

    .ratings {
        text-align: center;
        margin-top: 10px;
    }

    a {
        text-decoration: none;
        color: black;
    }


    .tab-panel {
        display: flex;
        justify-content: center;
        width: 100%;

    }

   

    /* .w3-row-padding .w3-col {
        box-sizing: border-box;
    }

    .w3-col {
        width: 100%;
    } */

    .tab-category .box-1 a {
        border: 2px solid;
        padding: 6px 18px;
        border-radius: 35px;
        display: flex-row;
        width: 130px;
        margin: 10px 15px   ;
        text-decoration: none;
        color: black;
        text-align: center;
        font-size: 15px;
        
    }

    .tab-category {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding: 20px;
        width:100%;
        background: #eeeeee; 
        position: relative;
        
    }

    .tab-category .box-1{
        margin: 9px 15px;
    }

    .gallery {
        padding: 15px 0;
    }

    .card{
        background: white;
    }

</style>

<div style="margin-top: 20px"></div>
<div style="display: flex; justify-content: center;">
    <h4><b>What interest you?</b></h4>
    <div style="margin-top: 15px"></div>
</div>

<div style="margin-top: 10px"></div>
<div class="tab-panel">
    <div style="padding-right: 30px;"><h4>Fiction Books</h4></div>
    <div><h4>Non-Fiction Books</h4></div>
    <div><h4>CD Genres</h4></div>
</div>

</div>

<div class="tab-category">
    <div class="box-1">
        <a href="#" class="btn-1">Drama</a>
        <a href="#" class="btn-1">Horror</a>
        <a href="#" class="btn-1">Mystery</a>
        <a href="#" class="btn-1">Sci-fi</a>
        <a href="#" class="btn-1">Art</a>
        <a href="#" class="btn-1">Biography</a>
        <a href="#" class="btn-1">Sports</a>
        <a href="#" class="btn-1">Travel</a>
        <a href="#" class="btn-1">Blues</a>
        <a href="#" class="btn-1">Classical</a>
        <a href="#" class="btn-1">Folk</a>
        <a href="#" class="btn-1">Hip-Hop</a>
